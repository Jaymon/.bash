#!/usr/bin/env bash
# -*- mode: sh -*-
# vi: set ft=sh :
###############################################################################
#
#? shgrep PATTERN -> search shell/bash files for PATTERN
#
###############################################################################

if [[ $1 == "--help" ]] || [[ $1 == "-h" ]] || [[ $# -lt 1 ]]; then

    echo "usage: $(basename $0) PATTERN"
    echo "search shell/bash files for PATTERN"
    exit 0

fi

typegrep sh "$@"


